{
  "manifest_version": 2,

  "name": "Chau Bolsomito - Content Filter",
  "description": "Removes content related to words you preset",
  "version": "0.4",

  "background": {
    "scripts": ["actions.js"],
    "persistent": true
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "content_scripts":[
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["filter.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },
  
  "permissions": [
    "activeTab",
    "storage"
  ]
}