{
  "manifest_version": 2,

  "name": "Chau Bolsomito - Content Filter",
  "description": "Removes content related to words you preset",
  "version": "0.1",

  "background": {
    "scripts": ["actions.js"],
    "persistent": true
  },

  "content_scripts":[
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["filter.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },
  
  "permissions": [
    "activeTab",
    "storage"
  ]
}